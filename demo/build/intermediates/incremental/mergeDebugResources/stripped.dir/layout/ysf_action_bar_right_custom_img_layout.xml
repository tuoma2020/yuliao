<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ysf_iv_title_bar_right_btn"
        android:layout_width="@dimen/ysf_title_bar_icon_size"
        android:layout_height="@dimen/ysf_title_bar_icon_size"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        tools:background="@drawable/ysf_evaluation_star_level_list_dark"
        android:contentDescription="@null"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/ysf_tv_title_bar_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/ysf_enter_store"
        android:textColor="@color/ysf_title_bar_text_color_dark_selector"
        android:textSize="@dimen/ysf_text_size_11" />
</LinearLayout>