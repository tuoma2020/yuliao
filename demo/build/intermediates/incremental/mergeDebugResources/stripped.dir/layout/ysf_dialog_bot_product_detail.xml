<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@drawable/ysf_bg_bot_product_detail_dialog">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            android:textColor="@color/ysf_black_333333"
            android:text="确认要发送吗？"/>
        <include layout="@layout/ysf_include_divider"/>

        <include
            layout="@layout/ysf_bot_product_and_order_detail"/>

        <include layout="@layout/ysf_include_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ysf_tv_dialog_bot_product_detail_cancel"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/ysf_black_333333"
                android:layout_marginRight="4.5dp"
                android:text="@string/ysf_cancel"
                android:background="@drawable/ysf_bg_bot_dialog_cancel"/>
            <TextView
                android:id="@+id/ysf_tv_dialog_bot_product_detail_done"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="4.5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:text="@string/ysf_done"
                android:textColor="@color/ysf_white"
                android:textSize="14sp"
                android:background="@drawable/ysf_evaluation_button_bg"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>