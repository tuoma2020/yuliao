<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ysf_iv_goods_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ysf_image_placeholder_loading" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ysf_tv_goods_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/ysf_black_222222"
                android:textSize="@dimen/ysf_text_size_14"
                tools:text="商品名称" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ysf_tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/ysf_black_222222"
                    android:textSize="@dimen/ysf_text_size_14"
                    android:textStyle="bold"
                    tools:text="￥100.00" />

                <TextView
                    android:id="@+id/ysf_tv_goods_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/ysf_grey_999999"
                    android:textSize="@dimen/ysf_text_size_14"
                    tools:text="x3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ysf_tv_goods_sku"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="@color/ysf_grey_999999"
                android:textSize="@dimen/ysf_text_size_14"
                android:ellipsize="end"
                tools:text="默认" />

            <TextView
                android:id="@+id/ysf_tv_goods_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginLeft="8dp"
                android:maxLines="1"
                android:textColor="@color/ysf_grey_999999"
                android:textSize="@dimen/ysf_text_size_14"
                tools:text="已发货" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>