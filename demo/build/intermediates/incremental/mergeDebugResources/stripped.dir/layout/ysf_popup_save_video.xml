<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:layout_gravity="bottom">
    <TextView
        android:id="@+id/ysf_tv_watch_video_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@color/ysf_white"
        android:textColor="@color/ysf_blue_5092e1"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:text="@string/ysf_video_save_to_local"/>
    <TextView
        android:id="@+id/ysf_tv_watch_video_save_cancel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@color/ysf_white"
        android:textColor="@color/ysf_grey_666666"
        android:text="@string/ysf_cancel"/>
</FrameLayout>