<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/ysf_white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ysf_ll_bot_product_shop_parent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/ysf_iv_item_bot_product_shop_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="16dp"
            tools:src="@drawable/ysf_ic_dialog_close"/>
        <TextView
            android:id="@+id/ysf_tv_item_bot_product_shop_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"
            android:gravity="center_vertical"
            android:textColor="@color/ysf_black_333333"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            android:maxLines="1"
            android:layout_marginRight="6dp"
            android:ellipsize="end"
            tools:text="考拉海购考拉海购"/>

        <TextView
            android:id="@+id/ysf_tv_item_bot_product_sub_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:gravity="right"
            android:textColor="@color/ysf_black_333333"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            android:maxLines="1"
            android:layout_marginRight="12dp"
            android:ellipsize="end"
            tools:text="设置一个很长的文案试试" />
    </LinearLayout>

    <include
        android:id="@+id/ysf_item_bot_product_info_parent"
        layout="@layout/ysf_bot_product_and_order_detail"/>
</LinearLayout>