<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ysf_tv_item_node_line"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/ysf_grey_DDDDDD" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ysf_tv_item_node_icon"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/ysf_ic_bot_logistic_selector" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ysf_tv_item_node_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ysf_black_333333"
            android:textSize="@dimen/ysf_text_size_13"
            tools:text="11111111111hahahahaha"/>

        <TextView
            android:id="@+id/ysf_tv_item_node_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/ysf_grey_999999"
            android:layout_marginBottom="12dp"
            android:textSize="@dimen/ysf_text_size_14"
            tools:text="2018:09:21"/>
        <include layout="@layout/ysf_include_divider" />
    </LinearLayout>
</LinearLayout>