<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ysf_white">

    <TextView
        android:id="@+id/ysf_tv_msl_error_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="加载失败，请重新加载" />

    <Button
        android:id="@+id/ysf_btn_msl_fail_reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/ysf_evaluation_button_bg"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingRight="12dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/ysf_tv_msl_error_info"
        android:text="刷新"
        android:textColor="@color/ysf_white" />
</RelativeLayout>