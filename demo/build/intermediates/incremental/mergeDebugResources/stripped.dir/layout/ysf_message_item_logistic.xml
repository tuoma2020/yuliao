<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/ysf_bubble_max_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ysf_tv_logistic_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp"
        android:textColor="@color/ysf_black_222222"
        android:textSize="@dimen/ysf_text_size_16"
        tools:text="标题" />

    <include layout="@layout/ysf_include_divider" />

    <TextView
        android:id="@+id/ysf_tv_logistic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp"
        tools:text="234234234234"
        android:textColor="@color/ysf_black_222222"
        android:textSize="@dimen/ysf_text_size_15" />

    <LinearLayout
        android:id="@+id/ysf_logistic_transport_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ysf_logistic_more_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/ysf_include_divider" />

        <TextView
            android:id="@+id/ysf_logistic_more_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ysf_list_transparent_selector"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:text="查看完整物流信息"
            android:textColor="@color/ysf_grey_999999"
            android:textSize="@dimen/ysf_text_size_14" />
    </LinearLayout>

    <include layout="@layout/ysf_message_item_bot_footer" />
</LinearLayout>